<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_sign"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/woman_profile"
                android:id="@+id/profile_image"
                app:civ_border_width="2dp"
               android:layout_marginTop="40dp"
                app:civ_border_color="#FF000000"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/profile_image"
                android:id="@+id/name_layout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:breakStrategy="high_quality"
                    android:text="Hello username"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:id="@+id/username_tv"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:breakStrategy="high_quality"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:id="@+id/username_et"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit_btn_iv_selector"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:id="@+id/name_edit_iv"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/confirm_btn_iv_selector"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:visibility="gone"
                    android:id="@+id/name_confirm_iv"/>


            </LinearLayout>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_marginBottom="30dp"
            android:popupBackground="@drawable/spinner_background"
            android:id="@+id/profile_item_spinner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/profile_item_spinner"
                android:id="@+id/items_layout"/>



        </RelativeLayout>

    </ScrollView>


</RelativeLayout>